<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentOnboarding2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ONBOARDING2"
            android:textAlignment="center"
            android:textColor="#2699FB"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="224dp"
            android:layout_margin="40dp"
            android:layout_weight="0.8"
            android:gravity="center"
            app:srcCompat="@mipmap/cinetixlogo" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="40dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Lorem ipsum dolor sit amet, amet eripuit id per. Graece debitis fastidii ea his. Eripuit nusquam consequat id vel, usu stet etiam Lorem ipsum dolor sit amet, amet eripuit id per. Graece debitis fastidii ea his. Eripuit nusquam consequat id vel"
            android:textAlignment="center"
            android:textColor="#2699FB"
            />
        <Button
            android:id="@+id/finish"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="132dp"
            android:layout_height="6dp"
            android:layout_weight="0.3"
            android:text="NEXT"
            android:textColor="#2699FB"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>